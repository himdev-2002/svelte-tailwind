{
	"name": "svelte-tailwind",
	"version": "0.0.1",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run prepack",
		"start": "BODY_SIZE_LIMIT=10M ADDRESS_HEADER=X-Forwarded-For ORIGIN=http://127.0.0.1:4000 HOST=127.0.0.1 PORT=4000 node --env-file=.env build",
		"start-prod": "BODY_SIZE_LIMIT=10M ADDRESS_HEADER=X-Forwarded-For ORIGIN=http://127.0.0.1:4000 HOST=127.0.0.1 PORT=4000 node --env-file=.env build",
		"start-socket": "SOCKET_PATH=/tmp/socket node --env-file=.env build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"inlang:compile": "npx @inlang/paraglide-js compile --project ./project.inlang --outdir ./src/lib/sparaglide",
		"inlang:translate": "npx @inlang/cli machine translate --project project.inlang"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.8",
		"@eslint/js": "^9.25.1",
		"@faker-js/faker": "^9.7.0",
		"@inlang/cli": "^3.0.11",
		"@internationalized/date": "^3.8.0",
		"@lucide/svelte": "^0.487.0",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/enhanced-img": "^0.4.4",
		"@sveltejs/kit": "^2.20.7",
		"@sveltejs/package": "^2.3.11",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.1.4",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.7",
		"@types/node": "^22.15.3",
		"autoprefixer": "^10.4.21",
		"bits-ui": "^1.3.19",
		"clsx": "^2.1.1",
		"eslint": "^9.25.1",
		"eslint-config-prettier": "^10.1.2",
		"eslint-plugin-svelte": "^3.5.1",
		"globals": "^16.0.0",
		"jsdom": "^26.1.0",
		"mode-watcher": "^1.0.2",
		"postcss": "^8.5.3",
		"postcss-import": "^16.1.0",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"publint": "^0.3.12",
		"svelte": "^5.28.2",
		"svelte-check": "^4.1.6",
		"svelte-flags": "^2.0.1",
		"svelte-loading-spinners": "^0.3.6",
		"svelte-sonner": "^0.3.28",
		"tailwind-merge": "^3.2.0",
		"tailwind-variants": "^1.0.0",
		"tailwindcss": "^3.4.17",
		"tailwindcss-animate": "^1.0.7",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.31.0",
		"vite": "^6.3.3",
		"vitest": "^3.1.2"
	},
	"keywords": [
		"svelte"
	],
	"dependencies": {
		"@anatine/zod-mock": "^3.14.0",
		"@inlang/paraglide-js": "^2.0.12",
		"@polka/compression": "1.0.0-next.25",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.20.7",
		"@unovis/svelte": "^1.5.1",
		"d3-scale": "^4.0.2",
		"dompurify": "^3.2.5",
		"svelte-radix": "^2.0.1",
		"winston": "^3.17.0",
		"winston-daily-rotate-file": "^5.0.0",
		"zod": "^3.24.3"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@sveltejs/kit",
			"esbuild",
			"maplibre-gl",
			"sharp"
		]
	},
	"packageManager": "pnpm@10.10.0"
}
